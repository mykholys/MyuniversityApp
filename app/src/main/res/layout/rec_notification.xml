<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/_3sdp"
    app:cardCornerRadius="@dimen/_15sdp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="@dimen/_10sdp"

    >

    <RelativeLayout
        android:id="@+id/rec_notification_ly"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >



            <TextView
                android:id="@+id/rec_notification_tv_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_notification"
                android:drawablePadding="@dimen/_5sdp"
                android:fontFamily="@font/montserrat_medium"
                android:lines="1"
                android:maxLines="1"
                android:layout_alignParentStart="true"
                android:text=""
                android:textAlignment="viewStart"
                android:textColor="@color/color_start_btn"
                android:textSize="@dimen/_14ssp" />


            <TextView
                android:id="@+id/rec_notification_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="end"
                android:lines="1"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/alpha_gray"
                android:textSize="@dimen/_12ssp" />


        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:layout_below="@+id/rec_notification_tv_course_name"
            android:background="@color/dark_alpha_50" />
        <TextView
            android:id="@+id/rec_notification_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/montserrat_light"
            android:lines="1"
            android:maxLines="1"
            android:layout_below="@+id/line"
            android:layout_marginTop="@dimen/_10sdp"
            android:text=""
           android:layout_centerHorizontal="true"
            android:textColor="@color/color_start_btn"
            android:textSize="@dimen/_14ssp" />

        <TextView
            android:id="@+id/rec_notification_tv_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rec_notification_tv_title"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:fontFamily="@font/montserrat_regular"

            android:text=""
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>