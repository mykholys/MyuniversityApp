<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_bg_dialog"
    android:paddingStart="@dimen/_20sdp"
    android:paddingTop="@dimen/_30sdp"
    android:paddingEnd="@dimen/_20sdp"
    android:paddingBottom="@dimen/_30sdp"
    tools:context=".ui.dialog.DialogDeveloperFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">


        <TextView
            android:id="@+id/DialogDeveloperFragment_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/open_sans_bold"
            android:text="@string/about_developers"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_16sdp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/DialogDeveloperFragment_tv_title"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/name_ahmed_salah_el_kholy"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />
            <TextView
                android:id="@+id/DialogDeveloperFragment_tv_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/https_m_me_3syer"
                android:layout_marginTop="@dimen/_15sdp"
                android:drawableStart="@drawable/ic_facebook"
                android:drawablePadding="@dimen/_5sdp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />
            <TextView
                android:id="@+id/DialogDeveloperFragment_tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/_201064754874"
                android:layout_marginTop="@dimen/_15sdp"
                android:drawableStart="@drawable/ic_call"
                android:drawablePadding="@dimen/_5sdp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>
    </RelativeLayout>

</FrameLayout>