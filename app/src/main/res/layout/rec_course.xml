<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rec_Category_cardView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_65sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardUseCompatPadding="true"
    android:elevation="@dimen/_3sdp"
    app:cardElevation="3dp">

<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rec_course_ly"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_65sdp"
    android:layout_gravity="center_vertical"
    android:padding="@dimen/_10sdp"
    android:background="@drawable/mybg"


    >

    <ImageView
        android:id="@+id/rec_course_iv_course"
        tools:ignore="ContentDescription"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/ic_logo" />

    <TextView
        android:id="@+id/rec_course_tv_course_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_toEndOf="@+id/rec_course_iv_course"
        android:fontFamily="@font/roboto"
        android:textColor="@color/white"
        android:layout_centerVertical="true"
        android:maxLines="2"
        android:text="php programming phpphpphpphpphpphpphpphp programmingphp phpphpphpphpphpphpphpphp programmingphp"
        android:textSize="@dimen/_12ssp" />
</RelativeLayout>
</androidx.cardview.widget.CardView>