<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="@dimen/_120sdp"
    android:elevation="@dimen/_3sdp"
    app:cardCornerRadius="@dimen/_15sdp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="@dimen/_10sdp"

    >

    <RelativeLayout
        android:id="@+id/rec_exam_ly"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"

        >

        <LinearLayout
            android:id="@+id/rec_exam_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center"
                android:text="@string/title"
                android:textColor="@color/alpha_gray"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center"
                android:text="@string/start_date"
                android:textColor="@color/alpha_gray"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center"
                android:text="@string/end_date"
                android:textColor="@color/alpha_gray"
                android:textSize="@dimen/_12ssp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rec_exam_row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rec_exam_title"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/rec_exam_exam_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_regular"
                android:layout_gravity="center_vertical"
                android:gravity="start"
                android:text="Exam 1 "
                android:maxLines="1"
                android:lines="1"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/rec_exam_start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_date"
                android:drawablePadding="@dimen/_3sdp"

                android:text="2020-04-10"
                android:textColor="@color/dark_gray" />

            <TextView
                android:id="@+id/rec_exam_end_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_date"
                android:drawablePadding="@dimen/_3sdp"
                android:layout_gravity="center_vertical"
                android:text="2020-04-10"
                android:textColor="@color/dark_gray" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rec_exam_row2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rec_exam_row1"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"

            android:weightSum="3">

            <TextView
                android:id="@+id/rec_exam_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center"

                android:layout_weight="1"
                android:background="@drawable/bg_active"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:text="@string/active"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/rec_exam_start_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="1"

                android:drawableStart="@drawable/ic_time"
                android:drawablePadding="@dimen/_3sdp"
                android:text="05:50 PM"
                android:textColor="@color/dark_gray" />

            <TextView
                android:id="@+id/rec_exam_end_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_time"
                android:layout_gravity="center_vertical"
                android:drawablePadding="@dimen/_3sdp"
                android:text="05:50 PM"
                android:textColor="@color/dark_gray" />

        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>